<!DOCTYPE html>
<html lang="en">
  <%- include('./partial/header.ejs') %>
  <body>
    <%- include('./partial/nav.ejs') %>
    <div class="blog-content">
      <h2>All Blogs</h2>
      <h2>Preetam</h2>
      <% if(blogs.length > 0){ %>
        <% blogs.forEach((blog) => { %>
          <a href="/blogs/<%= blog._id %>">
            <h3><%= blog.title %></h3>
            <p><%= blog.snippets %></p>
            <p><%= blog.body %></p>
          </a>
          <% }) %>
          <% } else{ %>
            <p>There is no blog to display</p>
            <% } %>
    </div>
    <%- include('./partial/footer.ejs') %>
  </body>
</html>
